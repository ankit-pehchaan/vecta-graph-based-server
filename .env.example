# =============================================================================
# Vecta Server Configuration
# =============================================================================
# Copy this file to .env and update with your actual values
# For localhost testing, most defaults are already set correctly

# =============================================================================
# OpenAI Configuration (Required)
# =============================================================================
OPENAI_API_KEY=your-openai-api-key-here
MODEL_ID=gpt-4.1

# =============================================================================
# JWT Token Configuration
# =============================================================================
# Generate a secure secret: python -c "import secrets; print(secrets.token_urlsafe(32))"
AUTH_JWT_SECRET=change-this-to-a-random-secret-in-production
AUTH_JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=15
REFRESH_TOKEN_EXPIRE_DAYS=30

# =============================================================================
# Cookie Configuration
# =============================================================================
# For localhost: COOKIE_SECURE=false (required for HTTP)
# For production: COOKIE_SECURE=true (required for HTTPS)
COOKIE_HTTP_ONLY=true
COOKIE_SECURE=false
COOKIE_SAME_SITE=lax
# Leave empty for single domain, or set to .example.com for cross-subdomain
COOKIE_DOMAIN=

# =============================================================================
# CSRF Protection
# =============================================================================
CSRF_COOKIE_NAME=csrf_token
CSRF_HEADER_NAME=X-CSRF-Token
CSRF_COOKIE_HTTP_ONLY=false

# =============================================================================
# OTP & Verification Configuration
# =============================================================================
OTP_EXPIRY_MINUTES=3
VERIFICATION_TOKEN_EXPIRY_MINUTES=5
MAX_OTP_ATTEMPTS=5
# Uncomment for testing (bypasses email sending)
# FIXED_OTP=123456

# =============================================================================
# Rate Limiting
# =============================================================================
LOGIN_RATE_LIMIT_PER_MINUTE=5
REGISTER_RATE_LIMIT_PER_HOUR=3
MAX_FAILED_LOGIN_ATTEMPTS=5

# =============================================================================
# Email Configuration (Resend)
# =============================================================================
EMAIL_PROVIDER=resend
EMAIL_FROM_NAME=Vecta AI
EMAIL_FROM_ADDRESS=support@vectatech.com.au
RESEND_API_KEY=your-resend-api-key-here

# =============================================================================
# Google OAuth Configuration
# =============================================================================
# For localhost testing:
GOOGLE_CLIENT_ID=your-google-client-id.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=your-google-client-secret
GOOGLE_REDIRECT_URI=http://localhost:8000/api/v1/auth/google/callback
FRONTEND_URL=http://localhost:3000

# For production, update to:
# GOOGLE_REDIRECT_URI=https://backend.vectatech.com.au/api/v1/auth/google/callback
# FRONTEND_URL=https://vectatech.com.au

# =============================================================================
# Storage Configuration
# =============================================================================
# Options: "memory" (default, in-memory, no persistence) or "sqlite" (persistent)
AUTH_STORE=memory
# AUTH_STORE=sqlite
AUTH_DB_FILE=auth.db

# =============================================================================
# Database & API Configuration
# =============================================================================
DB_DIR=tmp
# For localhost: use http://localhost:3000 or *
# For production: use your frontend domain
CORS_ORIGINS=http://localhost:3000
